@using ModelsEntity
@using SiteEngine.Models.Amplua
@model PerformerProfileFullViewModel

<div class="container">
    <div class="row row-gap-3 align-items-center">
        <div class="col p-3"></div>
        <div class="col-6 p-3">
            <div class="d-flex justify-content-center">
                <form method="post" asp-action="EditMyProfilePerformer" asp-controller="Amplua">
                    <div class="row g-3">
                        <div class="col-sm flex-fill visually-hidden">
                            <div class="mb-3">
                                <input asp-for="Id" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm flex-fill">
                            <div class="col-sm">
                                <label asp-for="FirstName" class="form-label">Введите имя</label>
                                <input asp-for="FirstName" type="text" class="form-control" placeholder="Имя" aria-label="Имя">
                            </div>
                            <span class="text-danger" asp-validation-for="FirstName"></span>
                        </div>
                        <div class="col-sm flex-fill">
                            <div class="col-sm">
                                <label asp-for="LastName" class="form-label">Введите фамилию</label>
                                <input asp-for="LastName" type="text" class="form-control" placeholder="Фамилия" aria-label="Фамилия">
                            </div>
                            <span class="text-danger" asp-validation-for="LastName"></span>
                        </div>
                        <div class="col-sm flex-fill">
                            <div class="col-sm">
                                <label asp-for="MiddleName" class="form-label">Введите отчество</label>
                                <input asp-for="MiddleName" type="text" class="form-control" placeholder="Отчество" aria-label="Отчество">
                            </div>
                            <span class="text-danger" asp-validation-for="MiddleName"></span>
                        </div>
                    </div>
                    <div class="col-sm flex-fill">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Почтовый адрес</label>
                            <input asp-for="Email" type="text" class="form-control" id="" placeholder="test.example@mail.ru">
                        </div>
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="col-sm flex-fill">
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Номер телефона</label>
                            <input asp-for="PhoneNumber" type="text" class="form-control" id="" placeholder="79998885544">
                        </div>
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div class="col-sm flex-fill">
                        <div class="mb-3">
                            <label asp-for="City" class="form-label">Город</label>
                            <input asp-for="City" type="text" class="form-control" id="" placeholder="Москва">
                        </div>
                        <span class="text-danger" asp-validation-for="City"></span>
                    </div>
                    <div class="col-sm flex-fill">
                        <div class="mb-3">
                            <label asp-for="Experience" class="form-label">Опыт</label>
                            <input asp-for="Experience" type="text" class="form-control" id="" placeholder="3 года на заводе . . .">
                        </div>
                        <span class="text-danger" asp-validation-for="Experience"></span>
                    </div>
                    <div class="col-sm flex-fill">
                        <div class="mb-3">
                            <label asp-for="Education" class="form-label">Образование</label>
                            <input asp-for="Education" type="text" class="form-control" id="" placeholder="МГУ магистратура кафетдра высшей математики . . .">
                        </div>
                        <span class="text-danger" asp-validation-for="Education"></span>
                    </div>
                    <div class="col-sm flex-fill">
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Прочее</label>
                            <input asp-for="Description" type="text" class="form-control" id="" placeholder="Кратко о себе">
                        </div>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="text-danger mb-2">@ViewBag.RegisterError</div>
                    <div class="p-2 flex-fill d-grid gap-2">
                        <input type="submit" class="btn btn-primary" value="Сохранить изменения" />
                    </div>
                </form>
            </div>
        </div>
        <div class="col p-3"></div>
    </div>
</div>