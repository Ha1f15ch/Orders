@using SiteEngine.Models.Account
@model LoginViewModel

<div class="container">
    <div class="row row-gap-3 align-items-center">
        <div class="col p-3"></div>
        <div class="col-6 p-3">
            <div class="d-flex justify-content-center">
                <form class="" asp-action="Login" asp-controller="Account">
                    <div class="p-2 flex-fill">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fa-solid fa-user"></i>
                            </span>
                            <div class="form-floating">
                                <input asp-for="UserName" type="text" class="form-control" placeholder="Введите логин" />
                                <label asp-for="UserName" class="form-label">Логин</label>
                            </div>
                        </div>
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>

                    <div class="p-2 flex-fill">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fa-solid fa-lock"></i>
                            </span>
                            <div class="form-floating">
                                <input asp-for="PasswordHash"
                                       type="password"
                                       class="form-control"
                                       placeholder="Введите пароль"
                                       value="@Model?.PasswordHash" />
                                <label asp-for="PasswordHash" class="form-label">Пароль</label>
                            </div>
                        </div>
                        <span class="text-danger" asp-validation-for="PasswordHash"></span>
                    </div>

                    <div class="text-danger mb-2">
                        @ViewBag.Error
                    </div>
                    <div class="p-2 flex-fill d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Войти</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col p-3"></div>
    </div>
</div>