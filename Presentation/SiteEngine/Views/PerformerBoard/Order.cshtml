@using ModelsEntity
@using SiteEngine.Models.Order
@model DetailOrderViewModel

@{
    Layout = "~/Views/Shared/PerformerLayout.cshtml";
}

<div class="container">
    <div class="row row-gap-3">
         <div class="col">
            <div class="sticky-top">
                <div class="row mb-3">
                    @if (!Model.Order.PerformerId.HasValue)
                    {
                        <div class="col-12 d-grid acceptClass">
                            <form class="col-12 d-grid" method="get">
                                <button class="btn btn-warning" asp-action="AcceptOrder" asp-controller="PerformerBoard">Откликнуться</button>
                                <input class="hidden" value="@Model.Order.Id" name="Id" />
                                <input class="hidden" value="@Model.PerformerProfile.Id" name="Id" />
                            </form>
                        </div>
                        <div class="col-12 d-grid cancelAcceptClass hidden">
                            <form class="col-12 d-grid" method="get">
                                <button class="btn btn-warning" asp-action="CancelAcceptOrder" asp-controller="PerformerBoard">Отменить отклик</button>
                                <input class="hidden" value="@Model.Order.Id" name="Id" />
                                <input class="hidden" value="@Model.PerformerProfile.Id" name="Id" />
                            </form>
                        </div>
                    }
                </div>

                @if (Model.Order.PerformerId.HasValue && Model.Order.PerformerId == Model.PerformerProfile.Id && Model.Order.OrderStatus != "S" && Model.Order.OrderStatus != "X" && Model.Order.OrderStatus != "N")
                {
                    <div class="row mb-3">
                        <div class="col d-grid ">
                            <button class="btn btn-secondary" type="button" data-bs-toggle="modal" data-bs-target="#ModalWindow">Начать выполнение</button>
                        </div>
                    </div>
                }
                @if (Model.Order.PerformerId.HasValue && Model.Order.PerformerId == Model.PerformerProfile.Id && Model.Order.OrderStatus == "S")
                {
                    <div class="row mb-3">
                        <div class="col d-grid ">
                            <button class="btn btn-secondary" type="button" data-bs-toggle="modal" data-bs-target="#ModalWindow3">Завершить</button>
                        </div>
                    </div>
                }

                @if (Model.Order.PerformerId.HasValue && Model.Order.PerformerId == Model.PerformerProfile.Id)
                {
                    <div class="row mb-3">
                        <div class="col d-grid ">
                            <button class="btn btn-danger" type="button" data-bs-toggle="modal" data-bs-target="#ModalWindow2">Отменить </button>
                        </div>
                    </div>
                }
            </div>
         </div>
         <div class="col-6 p-3">
             <div class="container">
                 <div class="justify-content-center">
                    <h5>Заказ № @Model.Order.Id</h5>
                    
                     <div class="row">
                        <div class="col text-start">
                            <h4 class="card-title">
                                @Model.Order.TitleName
                            </h4>
                        </div>
                     </div>
                    <div class="h4 pb-2 mb-4 text-danger border-bottom border-danger"></div>
                    <div class="row">
                        <div class="col text-start">
                            Город
                        </div>
                        <div class="col text-center">
                            <h10>@Model.Order.City</h10>
                        </div>
                    </div>
                    <div class="h4 pb-2 mb-4 text-danger border-bottom border-danger"></div>
                    <div class="row">
                        <div class="col text-start">
                            Адрес
                        </div>
                        <div class="col text-start">
                            <h10>@Model.Order.Adress</h10>
                        </div>
                    </div>
                    <div class="h4 pb-2 mb-4 text-danger border-bottom border-danger"></div>
                    <div class="row">
                        <div class="text-center">
                            <h8>Краткое описание</h8>
                        </div>
                        <div class="text-start">
                            <p class="fs-4">@Model.Order.Description</p>
                        </div>
                    </div>
                    <div class="h4 pb-2 mb-4 text-danger border-bottom border-danger"></div>
                    <div class="row">
                        <div class="col">
                            <div class="row">
                                <div class="col text-start">
                                    Время выполнения: 
                                </div>
                                <div class="col text-start">
                                    <p class="fs-5">@Model.Order.ActivTime</p>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="row">
                                <div class="col text-start">
                                    Исполнитель: 
                                </div>
                                @if (!@Model.Order.PerformerId.HasValue)
                                {
                                    <div class="col text-start">
                                        <p class="fs-5">Не выбран</p>
                                    </div>
                                }
                                else
                                {
                                    <div class="col text-start">
                                        <p class="fs-4">@Model.PerformerProfile.LastName @Model.PerformerProfile.FirstName</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="h4 pb-2 mb-4 text-danger border-bottom border-danger"></div>
                    <div class="row">
                        <div class="col text-start">
                            Приоритет: 
                        </div>
                        <div class="col text-center">
                            @{
                                var itemPriority = Model.OrderPriorities.SingleOrDefault(el => el.Name == Model.Order.OrderPriority);
                            }
                            <h9>@itemPriority.Description</h9>
                        </div>
                    </div>
                    <div class="h4 pb-2 mb-4 text-danger border-bottom border-danger"></div>
                    <div class="row">
                        <div class="col text-start">
                            Статус:
                        </div>
                        <div class="col text-center">
                            @{
                                var itemStatus = Model.OrderStatuses.SingleOrDefault(el => el.Name == Model.Order.OrderStatus);
                            }
                            <h9>@itemStatus.Description</h9>
                        </div>
                    </div>
                    <div class="h4 pb-2 mb-4 text-danger border-bottom border-danger"></div>
                    <div class="row">
                        <div class="col text-start">
                            Дата создания:
                        </div>
                        <div class="col text-center">
                            <h9>@Model.Order.CreatedDate</h9>
                        </div>
                    </div>
                    <div class="h4 pb-2 mb-4 text-danger border-bottom border-danger"></div>
                    <div class="row">
                        <div class="col text-start">
                            Дата последнегор изменения:
                        </div>
                        <div class="col text-center">
                            <h9>@Model.Order.UpdatedDate</h9>
                        </div>
                    </div>
                    <div class="h4 pb-2 mb-4 text-danger border-bottom border-danger"></div>
                    <div class="row">
                        <div class="col text-start">
                            Дата отмены:
                        </div>
                        <div class="col text-center">
                            <h9>@Model.Order.DeletedDate</h9>
                        </div>
                    </div>
                    <div class="h4 pb-2 mb-4 text-danger border-bottom border-danger"></div>
                 </div>
             </div>

            <div class="modal fade" id="ModalWindow3" tabindex="-1" aria-labelledby="ModalWindowLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="ModalWindowLabel">Завершить выполнение заказа.</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                        </div>
                        <div class="modal-body">
                            <div class="col mb-3">
                                <form asp-action="SetStartOrder" asp-controller="PerformerBoard" method="get">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Нет</button>
                                    <button type="submit" class="btn btn-primary">Завершить</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="ModalWindow2" tabindex="-1" aria-labelledby="ModalWindowLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="ModalWindowLabel">Отказ от заказа</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                        </div>
                        <div class="modal-body">
                            <div class="col mb-3">
                                <h9>Уверены, что хотите отказаться заказа ?</h9>
                                <form asp-action="CancelOrder" asp-controller="PerformerBoard" method="get">
                                    <div class="justify-content-center">
                                        <div class="hidden">
                                            <input type="number" asp-for="Order.Id" name="Id" value=@Model.Order.Id class="form-control">
                                            <input type="number" asp-for="CustomerProfile.Id" name="CustomerId" value=@Model.CustomerProfile.Id class="form-control">
                                        </div>
                                    </div>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                                    <button type="submit" class="btn btn-primary">Подтвердить отказ</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="ModalWindow" tabindex="-1" aria-labelledby="ModalWindowLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="ModalWindowLabel">Начать выполнение заказа.</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                        </div>
                        <div class="modal-body">
                            <div class="col mb-3">
                                <form asp-action="SetStartOrder" asp-controller="PerformerBoard" method="get">
                                    <div class="justify-content-center">
                                        <p><h8>Вы уверены, что хотите начать выполнение заказа ? Отменить данную операцию невозможно.</h8></p>
                                    </div>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Нет</button>
                                    <button type="submit" class="btn btn-primary">Начать</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
         </div>
         <div class="col">

         </div>
    </div>
</div>