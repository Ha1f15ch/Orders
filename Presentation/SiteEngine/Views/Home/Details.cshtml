@model ModelsEntity.Service

@{
    Layout = "~/Views/Shared/mainContent.cshtml";
}

@{
    ViewData["Title"] = "Details";
}

<h1>Детальная информация об услуге - @Model.NameOfService</h1>

<div>
    <h4>Услуга</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <h5><p>Название услуги</p></h5>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameOfService)
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Home" asp-action="Update" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Список услуг</a>
</div>
